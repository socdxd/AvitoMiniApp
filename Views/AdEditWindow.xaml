<Window x:Class="AvitoMiniApp.Views.AdEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
        Title="Объявление" Height="650" Width="500"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5"
        ResizeMode="NoResize">
    <Border Background="White" 
            CornerRadius="12" 
            Margin="20"
            Padding="30">
        <Border.Effect>
            <DropShadowEffect Color="#000000" Opacity="0.1" BlurRadius="20" ShadowDepth="2"/>
        </Border.Effect>

        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <TextBlock x:Name="TitleText" 
                           Text="Создание объявления" 
                           FontSize="24" 
                           FontWeight="SemiBold" 
                           Foreground="#333333"
                           Margin="0,0,0,30"/>

                <TextBlock Text="Название" 
                           FontSize="14" 
                           Foreground="#666666"
                           Margin="0,0,0,8"/>
                <Border Background="#F8F9FA" CornerRadius="8" Padding="12" Margin="0,0,0,20">
                    <TextBox x:Name="TitleTextBox" 
                             BorderThickness="0" 
                             Background="Transparent"
                             FontSize="14"
                             VerticalContentAlignment="Center"/>
                </Border>

                <TextBlock Text="Описание" 
                           FontSize="14" 
                           Foreground="#666666"
                           Margin="0,0,0,8"/>
                <Border Background="#F8F9FA" CornerRadius="8" Padding="12" Margin="0,0,0,20">
                    <TextBox x:Name="DescriptionTextBox" 
                             BorderThickness="0" 
                             Background="Transparent"
                             FontSize="14"
                             TextWrapping="Wrap"
                             AcceptsReturn="True"
                             Height="100"
                             VerticalScrollBarVisibility="Auto"/>
                </Border>

                <TextBlock Text="Цена (₽)" 
                           FontSize="14" 
                           Foreground="#666666"
                           Margin="0,0,0,8"/>
                <Border Background="#F8F9FA" CornerRadius="8" Padding="12" Margin="0,0,0,20">
                    <TextBox x:Name="PriceTextBox" 
                             BorderThickness="0" 
                             Background="Transparent"
                             FontSize="14"
                             VerticalContentAlignment="Center"/>
                </Border>

                <TextBlock Text="Город" 
                           FontSize="14" 
                           Foreground="#666666"
                           Margin="0,0,0,8"/>
                <Border Background="#F8F9FA" CornerRadius="8" Padding="12" Margin="0,0,0,20">
                    <TextBox x:Name="CityTextBox" 
                             BorderThickness="0" 
                             Background="Transparent"
                             FontSize="14"
                             VerticalContentAlignment="Center"/>
                </Border>

                <TextBlock Text="Категория" 
                           FontSize="14" 
                           Foreground="#666666"
                           Margin="0,0,0,8"/>
                <ComboBox x:Name="CategoryComboBox" 
                          Height="44"
                          FontSize="14"
                          Margin="0,0,0,20"/>

                <TextBlock Text="Путь к изображению (опционально)" 
                           FontSize="14" 
                           Foreground="#666666"
                           Margin="0,0,0,8"/>
                <Border Background="#F8F9FA" CornerRadius="8" Padding="12" Margin="0,0,0,30">
                    <TextBox x:Name="ImagePathTextBox" 
                             BorderThickness="0" 
                             Background="Transparent"
                             FontSize="14"
                             VerticalContentAlignment="Center"/>
                </Border>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Button Content="Отмена" 
                            Background="#E0E0E0" 
                            Foreground="#666666"
                            Padding="0,14"
                            FontSize="15"
                            FontWeight="SemiBold"
                            Margin="0,0,8,0"
                            Click="CancelButton_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    CornerRadius="8"
                                                    Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#BDBDBD"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <Button x:Name="SaveButton"
                            Content="Сохранить" 
                            Grid.Column="1"
                            Background="#0066FF" 
                            Foreground="White"
                            Padding="0,14"
                            FontSize="15"
                            FontWeight="SemiBold"
                            Margin="8,0,0,0"
                            Click="SaveButton_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    CornerRadius="8"
                                                    Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#0052CC"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </Grid>
            </StackPanel>
        </ScrollViewer>
    </Border>
</Window>
