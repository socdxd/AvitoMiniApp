<Window x:Class="AvitoMiniApp.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
        Title="Вход в Avito Mini" Height="450" Width="380"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5"
        ResizeMode="NoResize">
    <Grid>
        <Border Background="White"
                CornerRadius="12"
                Margin="20"
                Padding="30">
            <Border.Effect>
                <DropShadowEffect Color="#000000" 
                                  Opacity="0.1" 
                                  BlurRadius="20" 
                                  ShadowDepth="2"/>
            </Border.Effect>

            <StackPanel VerticalAlignment="Center">
                <fa:IconImage Icon="Store"
                              Width="40"
                              Height="40"
                              Foreground="#0066FF"
                              HorizontalAlignment="Center"
                              Margin="0,0,0,12"/>

                <TextBlock Text="Avito Mini"
                           FontSize="24"
                           FontWeight="SemiBold"
                           HorizontalAlignment="Center"
                           Foreground="#333333"
                           Margin="0,0,0,24"/>

                <TextBlock Text="Login"
                           FontSize="14"
                           Foreground="#666666"
                           Margin="0,0,0,8"/>

                <Border Background="#F8F9FA"
                        CornerRadius="8"
                        Padding="10"
                        Margin="0,0,0,16">
                    <TextBox x:Name="LoginTextBox"
                             BorderThickness="0"
                             Background="Transparent"
                             FontSize="14"
                             VerticalContentAlignment="Center"/>
                </Border>

                <TextBlock Text="Password"
                           FontSize="14"
                           Foreground="#666666"
                           Margin="0,0,0,8"/>

                <Border Background="#F8F9FA"
                        CornerRadius="8"
                        Padding="10"
                        Margin="0,0,0,20">
                    <PasswordBox x:Name="PasswordBox" 
                                 BorderThickness="0" 
                                 Background="Transparent"
                                 FontSize="14"
                                 VerticalContentAlignment="Center"/>
                </Border>

                <Button x:Name="LoginButton"
                        Content="Login" 
                        Background="#0066FF" 
                        Foreground="White"
                        BorderThickness="0"
                        Padding="0,14"
                        FontSize="16"
                        FontWeight="SemiBold"
                        Cursor="Hand"
                        Click="LoginButton_Click">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="8"/>
                        </Style>
                    </Button.Resources>
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#0066FF"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="8"
                                                Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                              VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#0052CC"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </Border>
    </Grid>
</Window>
